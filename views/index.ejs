<script>

    $(function () {
    var socket = io();
    $('form').submit(function(e){
      e.preventDefault(); // prevents page reloading
      socket.emit('chat', $('#m').val());
      $('#m').val('');
      return false;
    });
    // TODO fix here
    socket.on('chat', function(msg){
      $('#chatbox').append('<div class="msg-container"> <p class="text-light">'+ msg +'</p> </div>');
    });
  });  
</script>
